---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import Features from "../../components/Features.astro";
import { SITE } from "../../config/site.mjs";
---

<Layout
  title={`What We Do | ${SITE.title}`}
  description="Discover how Tails and Trainers supports LGBTQ communities through education, community, advocacy, safe spaces, and inclusion."
  canonicalURL={`${SITE.url}/features`}
>
  <Header />
  <main id="main-content" role="main" class="pt-20">
    <Features />
  </main>
  <Footer />
</Layout>
