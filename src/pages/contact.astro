---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContactForm from "../components/ContactForm.astro";
import ScrollReveal from "../components/ScrollReveal.tsx";
import { SITE } from "../config/site.mjs";
---

<Layout
  title={`Contact | ${SITE.title}`}
  description="Get in touch with Tails and Trainers. We'd love to hear from you about volunteering, partnerships, or questions."
  canonicalURL={`${SITE.url}/contact`}
>
  <Header />
  <main id="main-content" role="main">
    <section class="max-w-2xl mx-auto px-4 py-20">
      <ScrollReveal client:idle>
        <h1 class="font-[var(--font-display)] text-5xl font-bold text-cream mb-4">Contact</h1>
      </ScrollReveal>
      <ScrollReveal client:idle delay={0.2}>
        <p class="text-xl text-taupe mb-12">
          Get in touch with us. Whether you want to volunteer, partner, donate, or just say helloâ€”we'd love to hear from you.
        </p>
      </ScrollReveal>

      <ScrollReveal client:idle delay={0.3}>
        <ContactForm />
      </ScrollReveal>
    </section>
  </main>
  <Footer />
</Layout>
