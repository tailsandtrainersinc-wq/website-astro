---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ScrollReveal from "../components/ScrollReveal.tsx";
import { SITE } from "../config/site.mjs";
---

<Layout
  title={`About | ${SITE.title}`}
  description="Learn more about Tails and Trainers—a 501(c)(3) non-profit supporting LGBTQ communities through education, advocacy, and connection."
  canonicalURL={`${SITE.url}/about`}
>
  <Header />
  <main id="main-content" role="main">
    <section class="max-w-4xl mx-auto px-4 py-20">
      <ScrollReveal client:idle>
        <h1 class="font-[var(--font-display)] text-5xl font-bold text-cream mb-4">About Tails and Trainers</h1>
      </ScrollReveal>
      <ScrollReveal client:load delay={0.1}>
        <p class="text-xl text-taupe mb-12">
          Tails and Trainers is a 501(c)(3) non-profit dedicated to supporting LGBTQ communities through education, advocacy, and connection. We believe everyone deserves to learn, grow, and belong in safe, affirming spaces.
        </p>
      </ScrollReveal>

      <div class="prose prose-invert prose-lg max-w-none">
        <ScrollReveal client:load delay={0.2}>
          <h2 class="text-cream font-[var(--font-display)]">Our Mission</h2>
          <p class="text-taupe">
            We create and support programs that educate the public, build community, and advocate for LGBTQ visibility and rights. From workshops and resources to partnerships and outreach, we work to make the world more inclusive—one connection at a time.
          </p>
        </ScrollReveal>

        <ScrollReveal client:load delay={0.3}>
          <h2 class="text-cream font-[var(--font-display)]">What We Do</h2>
          <ul class="text-taupe">
            <li><strong class="text-cream">Education</strong> — Workshops, resources, and programs that foster understanding and support for LGBTQ experiences.</li>
            <li><strong class="text-cream">Community</strong> — Building connections and support networks so everyone can thrive as their authentic selves.</li>
            <li><strong class="text-cream">Advocacy</strong> — Standing up for LGBTQ rights and visibility through outreach and informed advocacy.</li>
            <li><strong class="text-cream">Safe Spaces</strong> — Creating and supporting environments where LGBTQ individuals can learn, grow, and belong.</li>
          </ul>
        </ScrollReveal>

        <ScrollReveal client:load delay={0.4}>
          <h2 class="text-cream font-[var(--font-display)]">Get Involved</h2>
          <p class="text-taupe">
            Whether you want to volunteer, donate, partner with us, or simply learn more—we'd love to hear from you. <a href="/contact" class="text-brass hover:text-brass-bright underline">Contact us</a> to get involved.
          </p>
        </ScrollReveal>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
