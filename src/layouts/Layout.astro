---
import '../styles/global.css';
import { SITE } from '../config/site.mjs';
import type { SEOProps } from '../types/seo';
import PawTrail from '../components/PawTrail.tsx';

interface Props extends SEOProps {
  lang?: string;
}

const {
  title = SITE.title,
  description = SITE.description,
  canonicalURL,
  ogTitle = title,
  ogDescription = description,
  ogImage = SITE.ogImage,
  ogType = 'website',
  twitterCard = 'summary_large_image',
  twitterTitle = ogTitle,
  twitterDescription = ogDescription,
  twitterImage = ogImage,
  noindex = false,
  nofollow = false,
  lang = SITE.defaultLanguage,
} = Astro.props;

const currentPath = Astro.url.pathname;
const canonicalPath = canonicalURL || currentPath;
const siteURL = new URL(canonicalPath, SITE.url);

const getFullImageUrl = (image: string): string => {
  if (image.startsWith('http://') || image.startsWith('https://')) {
    return image;
  }
  return new URL(image, SITE.url).href;
};

const fullOgImage = getFullImageUrl(ogImage);
const fullTwitterImage = getFullImageUrl(twitterImage);

const robotsContent = [
  noindex ? 'noindex' : 'index',
  nofollow ? 'nofollow' : 'follow',
].join(', ');
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Fonts: Epilogue (display) + Inter (body) -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Epilogue:ital,wght@0,400;0,600;0,700;0,800;0,900;1,400;1,700&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet" />

		<link rel="preload" href="/favicon.svg" as="image" type="image/svg+xml" />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="robots" content={robotsContent} />
		<link rel="canonical" href={siteURL.href} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={ogType} />
		<meta property="og:url" content={siteURL.href} />
		<meta property="og:title" content={ogTitle} />
		<meta property="og:description" content={ogDescription} />
		<meta property="og:image" content={fullOgImage} />
		<meta property="og:site_name" content={SITE.title} />

		<!-- Twitter -->
		<meta name="twitter:card" content={twitterCard} />
		<meta name="twitter:url" content={siteURL.href} />
		<meta name="twitter:title" content={twitterTitle} />
		<meta name="twitter:description" content={twitterDescription} />
		<meta name="twitter:image" content={fullTwitterImage} />
	</head>
	<body class="min-h-screen antialiased">
		<!-- Pride gradient strip â€” always visible at top -->
		<div class="fixed top-0 left-0 right-0 h-1 z-[100] pride-gradient" aria-hidden="true"></div>

		<!-- Skip to content -->
		<a href="#main-content" class="sr-only">
			Skip to main content
		</a>

		<!-- Paw trail (desktop only, React island) -->
		<PawTrail client:load />

		<slot />

		<!-- Cursor glow tracking -->
		<script>
			if (window.matchMedia('(pointer: fine)').matches) {
				const root = document.documentElement;
				let ticking = false;
				document.addEventListener('mousemove', (e) => {
					if (!ticking) {
						requestAnimationFrame(() => {
							root.style.setProperty('--cursor-x', e.clientX + 'px');
							root.style.setProperty('--cursor-y', e.clientY + 'px');
							ticking = false;
						});
						ticking = true;
					}
				});
			}
		</script>
	</body>
</html>
