---
import '../styles/global.css';
import { SITE } from '../config/site.mjs';
import type { SEOProps } from '../types/seo';

interface Props extends SEOProps {
  lang?: string;
}

const {
  title = SITE.title,
  description = SITE.description,
  canonicalURL,
  ogTitle = title,
  ogDescription = description,
  ogImage = SITE.ogImage,
  ogType = 'website',
  twitterCard = 'summary_large_image',
  twitterTitle = ogTitle,
  twitterDescription = ogDescription,
  twitterImage = ogImage,
  noindex = false,
  nofollow = false,
  lang = SITE.defaultLanguage,
} = Astro.props;

// Construct full URLs
const currentPath = Astro.url.pathname;
const canonicalPath = canonicalURL || currentPath;
const siteURL = new URL(canonicalPath, SITE.url);

// Handle image URLs - support both absolute URLs and relative paths
const getFullImageUrl = (image: string): string => {
  if (image.startsWith('http://') || image.startsWith('https://')) {
    return image;
  }
  return new URL(image, SITE.url).href;
};

const fullOgImage = getFullImageUrl(ogImage);
const fullTwitterImage = getFullImageUrl(twitterImage);

// Build robots meta content
const robotsContent = [
  noindex ? 'noindex' : 'index',
  nofollow ? 'nofollow' : 'follow',
].join(', ');
---

<!doctype html>
<html lang={lang}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />

		<!-- Fonts: Instrument Serif (display) + Inter (body) -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Instrument+Serif:ital@0;1&family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&display=swap" rel="stylesheet" />

		<!-- Preload Critical Resources -->
		<link rel="preload" href="/favicon.svg" as="image" type="image/svg+xml" />

		<!-- Primary Meta Tags -->
		<title>{title}</title>
		<meta name="title" content={title} />
		<meta name="description" content={description} />
		<meta name="robots" content={robotsContent} />
		<link rel="canonical" href={siteURL.href} />

		<!-- Open Graph / Facebook -->
		<meta property="og:type" content={ogType} />
		<meta property="og:url" content={siteURL.href} />
		<meta property="og:title" content={ogTitle} />
		<meta property="og:description" content={ogDescription} />
		<meta property="og:image" content={fullOgImage} />
		<meta property="og:site_name" content={SITE.title} />

		<!-- Twitter -->
		<meta name="twitter:card" content={twitterCard} />
		<meta name="twitter:url" content={siteURL.href} />
		<meta name="twitter:title" content={twitterTitle} />
		<meta name="twitter:description" content={twitterDescription} />
		<meta name="twitter:image" content={fullTwitterImage} />
	</head>
	<body class="min-h-screen antialiased">
		<!-- Aurora Background -->
		<div class="aurora-container" aria-hidden="true">
			<div class="aurora-blob aurora-blob-1"></div>
			<div class="aurora-blob aurora-blob-2"></div>
			<div class="aurora-blob aurora-blob-3"></div>
			<div class="aurora-blob aurora-blob-4"></div>
		</div>

		<!-- Skip to content -->
		<a
			href="#main-content"
			class="sr-only"
		>
			Skip to main content
		</a>

		<slot />

		<!-- Cursor Glow Tracking -->
		<script>
			if (window.matchMedia('(pointer: fine)').matches) {
				const root = document.documentElement;
				let ticking = false;
				document.addEventListener('mousemove', (e) => {
					if (!ticking) {
						requestAnimationFrame(() => {
							root.style.setProperty('--cursor-x', e.clientX + 'px');
							root.style.setProperty('--cursor-y', e.clientY + 'px');
							ticking = false;
						});
						ticking = true;
					}
				});
			}
		</script>

		<!-- Aurora Scroll Intensity -->
		<script>
			const aurora = document.querySelector('.aurora-container');
			if (aurora) {
				let ticking = false;
				window.addEventListener('scroll', () => {
					if (!ticking) {
						requestAnimationFrame(() => {
							const scrollRatio = Math.min(window.scrollY / (window.innerHeight * 2), 1);
							const intensity = 0.4 - (scrollRatio * 0.25);
							document.documentElement.style.setProperty('--aurora-intensity', String(intensity));
							ticking = false;
						});
						ticking = true;
					}
				});
			}
		</script>
	</body>
</html>
